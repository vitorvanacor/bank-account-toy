{
  "name": "bank-account-server",
  "version": "0.1.0",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "start": "nodemon",
    "test": "jest",
    "console": "node -r ts-node/register/transpile-only --experimental-repl-await src/console.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/app.ts"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongodb": "^3.6.8",
    "mongoose": "^5.12.13",
    "morgan": "^1.10.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-typescript": "^7.13.0",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.0",
    "babel-jest": "^27.0.2",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0"
  }
}
